@model ADSBackend.Models.Match

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Match</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MatchId" />
            <div class="form-group">
                <div class="checkbox">
                    <div class="i-checks">
                        <label>
                            <input asp-for="Completed" /> @Html.DisplayNameFor(model => model.Completed)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <div class="i-checks">
                        <label>
                            <input asp-for="IsVirtual" /> @Html.DisplayNameFor(model => model.IsVirtual)
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="MatchDate" class="control-label"></label>
                <input asp-for="MatchDate" class="form-control" />
                <span asp-validation-for="MatchDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeSchoolId" class="control-label"></label>
                <select asp-for="HomeSchoolId" asp-items="ViewBag.Schools" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="AwaySchoolId" class="control-label"></label>
                <select asp-for="AwaySchoolId" asp-items="ViewBag.Schools" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="HomePoints" class="control-label"></label>
                <input asp-for="HomePoints" class="form-control" />
                <span asp-validation-for="HomePoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayPoints" class="control-label"></label>
                <input asp-for="AwayPoints" class="form-control" />
                <span asp-validation-for="AwayPoints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Styles {
    <link href="~/lib/inspinia/plugins/iCheck/custom.css" rel="stylesheet">

    <style type="text/css">
        .checkbox label {
            font-size: 1.2em;
            padding-left: 0px;
        }
    </style>

}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/lib/inspinia/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green'
            });
        });
    </script>
}
