@model IEnumerable<ADSBackend.Models.School>

@{
    ViewData["Title"] = "Schools";
}

<h2>Schools</h2>

<p>
    <a asp-action="Create" class="btn btn-w-m btn-primary">Create New</a>
</p>
<div class="ibox-content">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Season.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="vertical-align: middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td style="vertical-align: middle">
                        @Html.DisplayFor(modelItem => item.Season.Name)
                    </td>

                    <td style="vertical-align: middle">
                        @await Html.PartialAsync("_CrudOptions", item.SchoolId)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>