@model ADSBackend.Models.School

@{
    ViewData["Title"] = "Create";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a asp-controller="Admin" asp-action="Index">Home</a>
    </li>
    <li class="breadcrumb-item">
        <a asp-controller="Schools" asp-action="Index">Schools</a>
    </li>
    <li class="breadcrumb-item active">
        <strong>Create</strong>
    </li>
</ol>

<div class="ibox">
<div class="ibox-title"><h4>Create School</h4></div>
<div class="ibox-content">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <select asp-for="SeasonId" asp-items="ViewBag.Seasons" class="form-control"></select>
            </div>
            <div class="form-group">
                <select asp-for="DivisionId" asp-items="ViewBag.Divisions" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortName" class="control-label"></label>
                <input asp-for="ShortName" maxlength="12" class="form-control" />
                <span asp-validation-for="ShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abbreviation" class="control-label"></label>
                <input asp-for="Abbreviation" maxlength="2" class="form-control" />
                <span asp-validation-for="Abbreviation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdvisorName" class="control-label"></label>
                <input asp-for="AdvisorName" class="form-control" />
                <span asp-validation-for="AdvisorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdvisorEmail" class="control-label"></label>
                <input asp-for="AdvisorEmail" class="form-control" />
                <span asp-validation-for="AdvisorEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdvisorPhoneNumber" class="control-label"></label>
                <input asp-for="AdvisorPhoneNumber" class="form-control" />
                <span asp-validation-for="AdvisorPhoneNumber" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
