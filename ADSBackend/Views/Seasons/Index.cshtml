@model IEnumerable<ADSBackend.Models.Season>

@{
    ViewData["Title"] = "Chess Seasons";
}

<h2>Chess Seasons</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartingYear)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartingYear)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SeasonID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SeasonID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SeasonID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
