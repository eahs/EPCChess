@model IEnumerable<ADSBackend.Models.Season>

@{
    ViewData["Title"] = "Chess Seasons";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a asp-controller="Admin" asp-action="Index">Home</a>
    </li>
    <li class="breadcrumb-item active">
        <strong>Seasons</strong>
    </li>
</ol>

<h2>Chess Seasons</h2>

<p>
    <a asp-action="Create" class="btn btn-w-m btn-primary">Create New</a>
</p>
<div class="ibox-content">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td style="vertical-align: middle">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="vertical-align: middle">
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td style="vertical-align: middle">
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td style="vertical-align: middle">
                    @await Html.PartialAsync("_CrudOptions", item.SeasonId)

                </td>
            </tr>
            }
        </tbody>
    </table>
</div>