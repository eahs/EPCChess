@model IEnumerable<ADSBackend.Models.Match>

@{
    var school = ViewBag.School as School;


    ViewData["Title"] = "Scheduled Matches for " + school?.Name;


}

<h2>@ViewData["Title"]</h2>


<div class="ibox">
    <div class="ibox-content">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th style="width: 1%; white-space: nowrap">
                        @Html.DisplayNameFor(model => model.MatchDate)
                    </th>
                    <th style="width: 1%; white-space: nowrap" class="text-center">
                        @Html.DisplayNameFor(model => model.Completed)
                    </th>
                    <th>
                        Home School
                    </th>
                    <th>
                        Away School
                    </th>
                    <th class="text-center">
                        Match Result
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="vertical-align: middle">
                            @Html.DisplayFor(modelItem => item.MatchDate)
                        </td>
                        <td style="vertical-align: middle" class="text-center">
                            <div class="i-checks">
                                <label>
                                    @Html.DisplayFor(modelItem => item.Completed)
                                </label>
                            </div>
                        </td>
                        <td style="vertical-align: middle">
                            @Html.DisplayFor(modelItem => item.HomeSchool.ShortName)
                        </td>
                        <td style="vertical-align: middle">
                            @Html.DisplayFor(modelItem => item.AwaySchool.ShortName)
                        </td>
                        <td style="vertical-align: middle" class="text-center">
                            @Html.DisplayFor(modelItem => item.HomePoints) - @Html.DisplayFor(modelItem => item.AwayPoints)
                        </td>
                        <td style="vertical-align: middle">
                            <a class="btn btn-white btn-bitbucket" asp-action="Manage" asp-route-id="@item.MatchId"><i class="fa fa-eye"></i> Manage Match</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Styles {
    <link href="~/lib/inspinia/plugins/iCheck/custom.css" rel="stylesheet">

    <style type="text/css">
        .icheckbox_square-green.checked.disabled {
            background-position: -48px 0;
        }
    </style>
}

@section Scripts {
    <script src="~/lib/inspinia/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green'
            });
        });
    </script>
}

